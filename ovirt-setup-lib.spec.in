%if 0%{?rhel} && 0%{?rhel} <= 6
%{!?__python2: %global __python2 /usr/bin/python2}
%{!?python2_sitelib: %global python2_sitelib %(%{__python2} -c "from distutils.sysconfig import get_python_lib; print(get_python_lib())")}
%{!?python2_sitearch: %global python2_sitearch %(%{__python2} -c "from distutils.sysconfig import get_python_lib; print(get_python_lib(1))")}
%endif

%if 0%{?fedora} && 0%{?fedora} >= 23
%global with_python3 1
%endif

%if 0%{?with_python3}
%global python python3
%global python_devel python3-devel
%global my_python_sitelib %{python3_sitelib}
%else
%global python python
%global python_devel python2-devel
%global my_python_sitelib %{python2_sitelib}
%endif

%{!?_pkgdocdir: %global _pkgdocdir %{_docdir}/%{name}-%{version}}

%global         package_version @PACKAGE_VERSION@

Summary:        oVirt setup common library
Name:           @PACKAGE_NAME@
Version:        @PACKAGE_RPM_VERSION@
Release:        @PACKAGE_RPM_RELEASE@%{?release_suffix}%{?dist}
Source0:        http://resources.ovirt.org/pub/src/%{name}/%{name}-%{package_version}.tar.gz
License:        ASL 2.0
Group:          Development/Libraries
BuildArch:      noarch
Url:            http://www.ovirt.org

Requires:       %{python}

Requires:       otopi

BuildRequires:  gettext
BuildRequires:  %{python_devel}

%description
oVirt setup common library

%prep
%setup -q -n %{name}-%{package_version}

%build
%configure \
        --docdir="%{_pkgdocdir}" \
        --disable-python-syntax-check \
        %{?conf} \
        PYTHON="%{python}"
make %{?_smp_mflags}

%install
make %{?_smp_mflags} install DESTDIR="%{buildroot}"

%clean
rm -rf %{buildroot}

%files
%defattr(-,root,root)
%{my_python_sitelib}/ovirt_setup_lib/
%{_pkgdocdir}/*
%doc README.md
%if 0%{?rhel} && 0%{?rhel} <= 6
%doc COPYING
%else
%license COPYING
%endif


